baseURL = "https://qinpengblog.github.com"
title = "月巢"
theme = "dream-plus"
themesDir = "themes/"
paginate = 5
enableRobotsTXT = true
#disqusShortname = "dream-plus"

#Skip building these files
ignoreFiles = ["content/404.md", "content/about.md", "content/cards/\\.*"]

#Syntax highlighting
pygmentsCodeFences = true
pygmentsUseClasses = true
pygmentsOptions = "linenos=table"

#Enable Hugo Emoji Conversion
enableEmoji=true

[params]
	#Favicon for site
	favicon = "/static/img/favicon.png"

	#Set whether you're hosting "cards" or "post"
	contentType = "posts"
	
	siteStartYear = 2019

	[params.author]
		name = "Qin Peng"
		description = "A boring person."
		avatar = "https://ws1.sinaimg.cn/large/8c14476fly1g1ffir8espj20va0vadh1.jpg"
		motto = "Self-discipline gives me freedom."

	[params.features]
		#Enable Twitter Emoji
		twitterEmoji = true
		#Enable Table of Contents
		toc = true
		#Enable share card
		shareCard = true
		#Use custom CSS
		customCSS = ["https://cdn.rawgit.com/UtkarshVerma/hugo-dream-plus/ae11561d/exampleSite/static/css/highlight.css"]

	[params.background]
		colorBG = true

	#Tags settings
	[params.tags]
		enabled = true

	#Categories settings
	[params.categories]
		enabled = true

[social]
	email = "qinp_2025@163.com"
	github = "QinPengBlog"
